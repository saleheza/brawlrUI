<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <Button
        android:id="@+id/button"
        android:layout_width="129dp"
        android:layout_height="87dp"
        android:text="Profile"
        app:icon="@drawable/ic_baseline_person_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="138dp"
        android:layout_height="85dp"
        android:onClick="homeScreen"
        android:text="Home"
        android:textSize="16sp"
        app:icon="@drawable/ic_baseline_home_24"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="147dp"
        android:layout_height="86dp"
        android:onClick="messagesScreen"
        android:text="Messages"
        android:textSize="12sp"
        app:icon="@drawable/ic_baseline_message_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="390dp"
        android:layout_height="651dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="View and Edit Profile"
                android:textColor="#FFEB3B"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Change Fighting Style"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/username3"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Fighting Style"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHighlight="#FFEB3B" />

            <TextView
                android:id="@+id/textView81"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Change Weight"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/username41"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Weight"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHighlight="#FFEB3B" />

            <TextView
                android:id="@+id/textView82"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Change Height"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/username42"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Height"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHighlight="#FFEB3B" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Change Biography"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/username5"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Biography"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHighlight="#FFEB3B" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Change Controversial Opinion"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/username6"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Controversial Opinion"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHighlight="#FFEB3B" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Change Image 1"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/btn_dialog" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Upload Image"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Change Image 2"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/btn_dialog" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Upload Image"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Change Image 3"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/btn_dialog" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Upload Image"
                android:textColor="#FFEB3B"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>